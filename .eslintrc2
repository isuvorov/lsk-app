{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "__CLIENT__": true,
    "__SERVER__": true,
    "__PROD__": true,
    "__STAGE__": true,
    "__DEV__": true,
    "For": true,
    "If": false
  },
  "env": {
    "browser": true
  },
  "rules": {
    "global-require": 0,
    "prefer-template": 1,
    "semi": 0,
    "react/prop-types": 1,
    "react/wrap-multilines": 0,
    "react/react-in-jsx-scope": 0,
    "react/jsx-boolean-value": 0,
    "arrow-body-style": 1,
    "object-curly-spacing": 1,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "jsx-quotes": [
      1,
      "prefer-single"
    ]
  }
}
